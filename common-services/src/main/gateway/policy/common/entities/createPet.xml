<wsp:Policy xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy" xmlns:L7p="http://www.layer7tech.com/ws/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:SetVariable>
            <L7p:Expression><![CDATA[{
	"name": "${name}",
	"type": "${type}",
	"age": "${age}"
}]]></L7p:Expression>
            <L7p:VariableToSet stringValue="pet-json"/>
        </L7p:SetVariable>
    </wsp:All>
</wsp:Policy>
